  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #0b0f1a;
      color: #fff;
      padding: 20px;
      max-width: 900px;
      margin: auto;
    }
    h1 {
      text-align: center;
      color: #7cf3ff;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #1f2a44;
      padding: 8px;
      text-align: center;
    }
    th {
      background: #111833;
    }
    input[type="checkbox"] {
      transform: scale(1.3);
    }
    button {
      margin-top: 20px;
      padding: 10px 20px;
      background: #7cf3ff;
      border: none;
      cursor: pointer;
      font-weight: bold;
    }
    canvas {
      margin-top: 40px;
      background: #fff;
      border-radius: 8px;
      padding: 10px;
    }
  </style>
